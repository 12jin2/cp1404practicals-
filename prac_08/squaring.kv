BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False
        Button:
            text: 'Square'
            on_press: app.handle_calculate(input_number.text)
        Label:
            id: output_label
            text: 'Result will show here'
            font_size: 48
            color: (1, 0.75, 0.8, 1)  # Pink color
    Label:
        text: 'Enter a number and press "Square"'
        font_size: 24
